<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="car" class="note_5.scope.Car" scope="singleton" />
    <bean id="boss1" class="note_5.scope.Boss" p:car-ref="car"/>
    <bean id="boss2" class="note_5.scope.Boss" p:car-ref="car"/>
    <bean id="boss3" class="note_5.scope.Boss" p:car-ref="car"/>

    <!--默认是singleton-->
    <bean id="car2" class="note_5.scope.Car" scope="prototype" />
    <bean id="boss21" class="note_5.scope.Boss" p:car-ref="car2"/>
    <bean id="boss22" class="note_5.scope.Boss" p:car-ref="car2"/>
    <bean id="boss23" class="note_5.scope.Boss" p:car-ref="car2"/>
</beans>